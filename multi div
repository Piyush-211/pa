#include <xc.h>
#include <stdio.h>
#include <stdlib.h>
#include <pic18f4550.h>

void multiply(void);
void divide(void);

void main(void) {
    int choice;
    
    TRISB = 0; // Configure PORTB as output
    
    while(1) {
        printf("\nMenu:\n1. Multiply 8-bit numbers\n2. Divide 8-bit numbers\n3. Exit\nEnter your choice: ");
        scanf("%d", &choice);
        
        switch(choice) {
            case 1:
                multiply();
                break;
            case 2:
                divide();
                break;
            case 3:
                exit(0);
            default:
                printf("Invalid choice. Please enter a valid option.\n");
        }
    }
}

void multiply(void) {
    unsigned char num1, num2, result;
    
    printf("Enter first 8-bit number: ");
    scanf("%hhu", &num1);
    
    printf("Enter second 8-bit number: ");
    scanf("%hhu", &num2);
    
    result = 0;
    
    for (int i = 0; i < num2; i++) {
        result += num1;
    }
    
    printf("Result of multiplication: %hhu\n", result);
    
    PORTB = result;
}

void divide(void) {
    unsigned char dividend, divisor, quotient;
    
    printf("Enter the dividend (8-bit number): ");
    scanf("%hhu", &dividend);
    
    printf("Enter the divisor (8-bit number): ");
    scanf("%hhu", &divisor);
    
    quotient = 0;
    
    while (dividend >= divisor) {
        dividend -= divisor;
        quotient++;
    }
    
    printf("Quotient of division: %hhu\n", quotient);
    
    PORTB = quotient;
}
